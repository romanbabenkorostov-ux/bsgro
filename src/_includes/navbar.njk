{# ===== NAVBAR ===== #}
<nav class="navbar navbar-expand-lg sticky-top">
  <div class="container">

    {# --- Brand / Logo --- #}
    {% if pageId == "index" %}
      <a class="navbar-brand" href="#top"><img src="/assets/logo.png" alt="BSGRO — Центр компетенций" loading="lazy"></a>
    {% else %}
      <a class="navbar-brand" href="/"><img src="/assets/logo.png" alt="BSGRO" loading="lazy"></a>
    {% endif %}

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent" aria-label="Навигация">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navContent">
      <ul class="navbar-nav ms-auto me-3">

        {# ===== INDEX PAGE: full section-nav ===== #}
        {% if pageId == "index" %}

          {% for sec in nav.indexSections %}
            {# «О проекте» — затем сразу вставляем страничные ссылки #}
            <li class="nav-item">
              <a class="nav-link" href="{{ sec.anchor }}">{{ sec.label }}</a>
            </li>
            {% if sec.anchor == "#project" %}
              <li class="nav-item">
                <a class="nav-link" href="/sorgo/" style="color:var(--clr-green) !important;">Агрокультура сорго</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" style="color:var(--clr-lime) !important;">Сорговый сироп</a>
                <ul class="dropdown-menu">
                  {% for child in nav.main[2].children %}
                    <li><a class="dropdown-item" href="{{ child.url }}"><i class="bi {{ child.icon }} me-2"></i>{{ child.label }}</a></li>
                  {% endfor %}
                </ul>
              </li>
            {% endif %}
          {% endfor %}

        {# ===== INNER PAGES: compact nav ===== #}
        {% else %}

          {# Главная #}
          <li class="nav-item">
            <a class="nav-link" href="/">Главная</a>
          </li>

          {# Агрокультура сорго #}
          <li class="nav-item">
            <a class="nav-link{% if pageId == 'sorgo' %} active{% endif %}" href="/sorgo/">Агрокультура сорго</a>
          </li>

          {# Сорговый сироп (dropdown) #}
          {% set isFoodPage = pageId in ["sorgo-food-1", "sorgo-food-2", "sorgo-food-3"] %}
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle{% if isFoodPage %} active{% endif %}" href="#" role="button" data-bs-toggle="dropdown">Сорговый сироп</a>
            <ul class="dropdown-menu">
              {% for child in nav.main[2].children %}
                <li><a class="dropdown-item{% if pageId == child.pageId %} active{% endif %}" href="{{ child.url }}"><i class="bi {{ child.icon }} me-2"></i>{{ child.label }}</a></li>
              {% endfor %}
            </ul>
          </li>

          {# Страницы sorgo.html: дополнительные ссылки на index #}
          {% if pageId == "sorgo" %}
            <li class="nav-item"><a class="nav-link" href="/#strategy">Стратегия</a></li>
            <li class="nav-item"><a class="nav-link" href="/#products">Продукты</a></li>
            <li class="nav-item"><a class="nav-link" href="/#processing">Переработка</a></li>
            <li class="nav-item"><a class="nav-link" href="/#margin">Маржинальность</a></li>
          {% endif %}

          {# Контакты #}
          <li class="nav-item">
            <a class="nav-link" href="/#contacts">Контакты</a>
          </li>

        {% endif %}
      </ul>

      {# --- Language switch --- #}
      <div class="lang-switch d-none d-lg-block">
        {% for lang in site.langs %}
          {% if lang == site.activeLang %}
            <span class="active-lang">{{ lang }}</span>
          {% else %}
            <span class="disabled-lang">{{ lang }}</span>
          {% endif %}
          {% if not loop.last %} | {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>
</nav>
